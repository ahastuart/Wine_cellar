                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1층 온도 :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reported_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
